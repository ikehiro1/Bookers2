<% end %> 

<div class='row'>
  <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
      <h2>Editing Book</h2>         
       <%= form_with model: @book,local: true do |f| %>
       <%= f.label :title %><br>
       <%= f.text_field :title%><br>
             
       <%= f.label :option %><br>
       <%= f.text_area :body %><br>
             
          <%= f.submit %><br>
             
      <div class="page_transition">
        <%=link_to "Show",book_path(@book.id)%>
